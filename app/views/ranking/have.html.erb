<div class="container">
  <div class="container-inner inner-sm clearfix">
    <h1>Have Ranking</h1>
    <table class="table table-striped">
      <tr>
        <th class="text-center">順位</th>
        <th class="text-center">持っている人の多い順：上位10アイテム</th>
      </tr>
      <% @items.each_with_index do | item , i | %>
        <tr>
          <td class="text-center" width="50"><%= "#{i+1}" %></td>
          <td><%= item.title %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>